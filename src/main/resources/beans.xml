<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="repoReader" class="com.eggs.impl.CsvFileMenuRepositoryReader" c:restaurantNames="karcsi"/>
	
	<bean id="menu1" class="com.eggs.Menu" p:restaurant-ref="karcsi">
		<property name="foodList">
			<list>
				<bean class="com.eggs.Food" p:id="h1" p:name="Hagymas bab" p:price="780"/>
				<bean class="com.eggs.Food" p:id="h2" p:name="Krumplis bab" p:price="1180"/>
			</list>
		</property>
	</bean>
	
	<bean id="karcsi" class="com.eggs.Restaurant" p:name="Karcsi Bufe" p:address-ref="epamAddress"/>
	
	<bean id="epamAddress" class="com.eggs.Address" p:city="Budapest" p:zip="1082" p:street="Futo utca 47."/>
	
	<bean id="memoryReader" class="com.eggs.impl.InmemoryMenuRepositoryReader">
		<property name="menus">
			<list>
				<ref bean="menu1"/>
			</list>
		</property>
	</bean>
	<bean id="printer" class="com.eggs.impl.ConsoleMenuPrinter" c:reader-ref="memoryReader"/>
	
</beans>
