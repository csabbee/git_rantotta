<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true" scanPeriod="3 seconds">

  <jmxConfigurator />
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level %logger{15} - %msg%n</pattern>
    </encoder>
  </appender>
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>testFile.log</file>
    <append>true</append>
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>
  
  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
  
  
  <logger name="com.eggs" level="warn" />
  <logger name="com.eggs.aop" level="warn" additivity="false">
    <!-- <appender-ref ref="STDOUT" /> -->
  </logger>
  <logger name="com.eggs.aop.TraceAspect" level="warn">
    <!-- <appender-ref ref="STDOUT" /> -->
  </logger>
  <logger name="com.eggs.aop.HelloAspect" level="warn">
    <!-- <appender-ref ref="STDOUT" /> -->
  </logger>
  <logger name="com.eggs.aop.CacheAspect" level="warn">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </logger>
  <logger name="com.eggs.aop.RetryAspect" level="warn">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </logger>
</configuration>